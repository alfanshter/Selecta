<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shareRombongan.ShareRombongan">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutJoinKode"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Masukkan Kode rombongan kamu"
        android:id="@+id/sharingkode"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        />

    <com.goodiebag.pinview.Pinview
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sharingkode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:pinLength="6"
        app:pinWidth="40dp"
        app:pinHeight="60dp"
        app:inputType="number"
        app:cursorVisible="true"
        app:forceKeyboard="true"
        android:id="@+id/pinsharing"
        >
    </com.goodiebag.pinview.Pinview>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sharingbuton"
        android:layout_below="@+id/pinsharing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Enter"
        />
</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/petamapbox"
    >
    <com.mapbox.mapboxsdk.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:id="@+id/mapboxfamily"
        mapbox:mapbox_cameraTargetLat="-7.818834"
        mapbox:mapbox_cameraTargetLng="112.526830"
        mapbox:mapbox_cameraZoom="12"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="keluar"
        android:id="@+id/btn_keluar"
        />

</RelativeLayout>
</RelativeLayout>